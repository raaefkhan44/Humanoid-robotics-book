/**
 * Any CSS included here will be global. The classic template
 * bundles Infima by default. Infima is a CSS framework designed to
 * work well for content-centric websites.
 */

/* You can override the classic template styles here. */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --ifm-color-primary: #9d00ff;
  --ifm-color-primary-dark: #8c00e6;
  --ifm-color-primary-darker: #7a00cc;
  --ifm-color-primary-darkest: #6900b3;
  --ifm-color-primary-light: #ae19ff;
  --ifm-color-primary-lighter: #bb33ff;
  --ifm-color-primary-lightest: #c84dff;
  --ifm-code-font-size: 95%;
}

/* Custom neon theme styles */
.neon-text {
  color: #00f0ff;
  text-shadow: 0 0 5px #00f0ff, 0 0 10px #00f0ff;
}

.neon-border {
  border: 1px solid #00f0ff;
  box-shadow: 0 0 5px #00f0ff, 0 0 10px rgba(0, 240, 255, 0.3);
}

.module-card {
  background: linear-gradient(145deg, #1a1a2e, #16213e);
  border: 1px solid #9d00ff;
  box-shadow: 0 0 10px rgba(157, 0, 255, 0.3);
  transition: all 0.3s ease;
}

.module-card:hover {
  box-shadow: 0 0 20px rgba(157, 0, 255, 0.6);
  transform: translateY(-5px);
}

.neon-button {
  background: linear-gradient(145deg, #9d00ff, #7a00cc);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  box-shadow: 0 0 10px rgba(157, 0, 255, 0.5);
  transition: all 0.3s ease;
}

.neon-button:hover {
  box-shadow: 0 0 20px rgba(157, 0, 255, 0.8);
  background: linear-gradient(145deg, #ae19ff, #8c00e6);
}

/* Custom styling for diagrams */
.diagram-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px 0;
  padding: 20px;
  border: 1px solid #9d00ff;
  border-radius: 10px;
  background-color: #0f0f1a;
}

/* Navigation styling */
.navbar {
  background: linear-gradient(145deg, #0f0f1a, #1a1a2e);
  box-shadow: 0 0 10px rgba(0, 240, 255, 0.2);
}

/* Footer styling */
.footer {
  background: linear-gradient(145deg, #0f0f1a, #1a1a2e);
  border-top: 1px solid #9d00ff;
}